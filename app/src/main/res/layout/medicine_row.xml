<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAFAF1">


    <ImageView
        android:id="@+id/MedicineImg"
        android:layout_marginStart="10dp"
        android:layout_width="99dp"
        android:layout_height="122dp"
        android:src="@drawable/medication" />

    <TextView
        android:id="@+id/MedicineStrengthTextViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/MedicineImg"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/MedicineNameTextViewRow"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/MedicineImg"
        android:text="TextView"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/MedicineDosageTextViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="-32dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/MedicineStrengthTextViewRow"
        android:text="TextView"
        android:textSize="20sp" />


</RelativeLayout>

